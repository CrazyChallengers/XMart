            <Frame Grid.Row="0" Style="{StaticResource BaseFrame}" HeightRequest="40" CornerRadius="20" Padding="20,0" Margin="5,35,5,5" HorizontalOptions="Fill">
                <StackLayout Orientation="Horizontal">
                    <ImageButton x:Name="CustomerServiceButton" Source="Resource/drawable/search.png" Style="{StaticResource EarImageButton}"/>
