<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:controls="clr-namespace:XMart.Controls"
             xmlns:cv="clr-namespace:CarouselView.FormsPlugin.Abstractions;assembly=CarouselView.FormsPlugin.Abstractions"
             x:Class="XMart.Views.HomePage"
             Title="首页">

    <ContentPage.Resources>
        <Style x:Key="SearchFrame" TargetType="Frame">
            <Setter Property="WidthRequest" Value="300"/>
            <Setter Property="HeightRequest" Value="30"/>
            <Setter Property="BorderColor" Value="LightGray"/>
            <Setter Property="BackgroundColor" Value="White"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="VerticalOptions" Value="Center"/>
        </Style>
        <Style x:Key="CarouselFrame" TargetType="Frame">
            <Setter Property="HeightRequest" Value="250"/>
            <Setter Property="BorderColor" Value="LightGray"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="VerticalOptions" Value="Start"/>
            <Setter Property="Margin" Value="10,5"/>
        </Style>
        <Style x:Name="EntryStyle" TargetType="controls:MyEntry">
            <Setter Property="WidthRequest" Value="250"/>
            <Setter Property="PlaceholderColor" Value="LightGray"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
            <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="Large"/>
            <Setter Property="MaxLength" Value="16"/>
        </Style>
        <Style TargetType="ImageButton">
            <Setter Property="WidthRequest" Value="30"/>
            <Setter Property="HeightRequest" Value="30"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="Aspect" Value="AspectFit"/>
        </Style>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <Grid x:Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Image Source="Resource/drawable/navi_back.png" VerticalOptions="StartAndExpand" HorizontalOptions="Fill" />
            
            <StackLayout Grid.Row="0" HeightRequest="100" Orientation="Horizontal" HorizontalOptions="Center">
                <ImageButton x:Name="CustomerServiceButton" Source="Resource/drawable/service.png"/>

                <Frame Style="{DynamicResource SearchFrame}">
                    <controls:MyEntry x:Name="account" Placeholder="原料更便宜啦~质量更好、价格低" Text="{Binding Account}"/>
                </Frame>

                <ImageButton x:Name="MessageButton" Source="Resource/drawable/message.png"/>
            </StackLayout>

            <StackLayout Grid.Row="1" Orientation="Vertical" HorizontalOptions="Center">
                <!--轮播图-->
                <Frame Style="{DynamicResource CarouselFrame}">
                    <cv:CarouselViewControl x:Name="carousel" ItemsSource="{Binding CarouselItemsSource}"
                                        ShowArrows="False" ShowIndicators="True" Orientation="Horizontal">
                        <cv:CarouselViewControl.ItemTemplate>
                            <DataTemplate>
                                <ImageButton Source="{Binding ImgSource}"
                                         Command="{Binding CarouselCommand}"
                                         CommandParameter="{Binding ImgUrl}"
                                         BackgroundColor="Transparent" Aspect="AspectFill"/>
                            </DataTemplate>
                        </cv:CarouselViewControl.ItemTemplate>
                    </cv:CarouselViewControl>
                </Frame>

            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>