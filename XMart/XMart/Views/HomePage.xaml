<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:controls="clr-namespace:XMart.Controls"
             xmlns:cv="clr-namespace:CarouselView.FormsPlugin.Abstractions;assembly=CarouselView.FormsPlugin.Abstractions"
             x:Class="XMart.Views.HomePage"
             Icon="Resource/drawable/home.png"
             Title="首页">

    <ContentPage.Resources>
        <Style x:Key="SectionTitle" TargetType="Label">
            <Setter Property="FontSize" Value="Title"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="HorizontalOptions" Value="Start"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid x:Name="MainGrid">
            <ScrollView>
                <StackLayout Orientation="Vertical" HorizontalOptions="Center">
                    <StackLayout HeightRequest="80"/>
                    <!--轮播图-->
                    <Frame Style="{StaticResource BaseFrame}" HeightRequest="150" Margin="5,0">
                        <cv:CarouselViewControl x:Name="carousel" ItemsSource="{Binding AdvertiseList}"
                                                ShowArrows="False" ShowIndicators="True" Orientation="Horizontal">
                            <cv:CarouselViewControl.ItemTemplate>
                                <DataTemplate>
                                    <ff:CachedImage Source="{Binding pic}" BackgroundColor="Transparent" Aspect="AspectFill">
                                        <ff:CachedImage.GestureRecognizers>
                                            <TapGestureRecognizer x:Name="CarouselItem" NumberOfTapsRequired="1" Tapped="CarouselItem_Tapped"/>
                                        </ff:CachedImage.GestureRecognizers>
                                    </ff:CachedImage>
                                </DataTemplate>
                            </cv:CarouselViewControl.ItemTemplate>
                        </cv:CarouselViewControl>
                    </Frame>

                    <!--主功能矩阵-->
                    <Frame Style="{StaticResource BaseFrame}" Margin="5" Padding="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="20"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.Resources>
                                <Style TargetType="ImageButton">
                                    <Setter Property="WidthRequest" Value="40"/>
                                    <Setter Property="HeightRequest" Value="40"/>
                                    <Setter Property="BackgroundColor" Value="Transparent"/>
                                    <!--<Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal">
                            <VisualState.Setters>
                                <Setter Property="Scale" Value="1" />
                            </VisualState.Setters>
                        </VisualState>

                        <VisualState x:Name="Pressed">
                            <VisualState.Setters>
                                <Setter Property="Scale" Value="0.9" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>-->
                                </Style>
                                <Style TargetType="Label">
                                    <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
                                    <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
                                    <Setter Property="HorizontalTextAlignment" Value="Center"/>
                                    <Setter Property="VerticalTextAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="Medium"/>
                                </Style>
                            </Grid.Resources>

                            <ImageButton Grid.Row="0" Grid.Column="0" Source="order_red.png" />
                            <Label Grid.Row="1" Grid.Column="0" Text="我的订单"/>

                            <ImageButton Grid.Row="0" Grid.Column="1" Source="pay.png"/>
                            <Label Grid.Row="1" Grid.Column="1" Text="待付款"/>

                            <ImageButton Grid.Row="0" Grid.Column="2" Source="box.png" />
                            <Label Grid.Row="1" Grid.Column="2" Text="待收货"/>

                            <ImageButton Grid.Row="0" Grid.Column="3" Source="comment.png"/>
                            <Label Grid.Row="1" Grid.Column="3" Text="待评价"/>

                            <ImageButton Grid.Row="0" Grid.Column="4" Source="service2.png" />
                            <Label Grid.Row="1" Grid.Column="4" Text="售后服务"/>

                        </Grid>
                    </Frame>
                    
                    <!--最近订单-->
                    <Label Text="最近订单" Style="{DynamicResource SectionTitle}"/>
                    <StackLayout Orientation="Vertical">
                        <Grid HeightRequest="60" Margin="5,0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Frame Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource BaseFrame}" HorizontalOptions="Fill" VerticalOptions="Fill">
                                <ff:CachedImage Source="circle.png" Aspect="AspectFit"/>
                            </Frame>

                            <Label Grid.Row="0" Grid.Column="1" Text="订单一" FontSize="Large" VerticalOptions="Center"/>
                            <Label Grid.Row="1" Grid.Column="1" Text="这里是物流信息gfasuigs" VerticalOptions="Center"/>
                        </Grid>
                        <Grid HeightRequest="60" Margin="5,0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Frame Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource BaseFrame}" HorizontalOptions="Fill" VerticalOptions="Fill">
                                <ff:CachedImage Source="circle.png" Aspect="AspectFit"/>
                            </Frame>

                            <Label Grid.Row="0" Grid.Column="1" Text="订单二" FontSize="Large" VerticalOptions="Center"/>
                            <Label Grid.Row="1" Grid.Column="1" Text="这里是物流信息gfasuigs" VerticalOptions="Center"/>
                        </Grid>
                        <Grid HeightRequest="60" Margin="5,0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Frame Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource BaseFrame}" HorizontalOptions="Fill" VerticalOptions="Fill">
                                <ff:CachedImage Source="circle.png" Aspect="AspectFit"/>
                            </Frame>

                            <Label Grid.Row="0" Grid.Column="1" Text="订单三" FontSize="Large" VerticalOptions="Center"/>
                            <Label Grid.Row="1" Grid.Column="1" Text="这里是物流信息gfasuigs" VerticalOptions="Center"/>
                        </Grid>
                    </StackLayout>

                    <!--推荐拼单列表-->
                    <Label Text="热门拼单" Style="{DynamicResource SectionTitle}" TextColor="Red"/>
                    <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                        <StackLayout Orientation="Horizontal" BindableLayout.ItemsSource="{Binding NewProductList}" Spacing="0">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Grid HeightRequest="180" WidthRequest="120" Margin="5,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="120"/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <Frame Grid.Row="0" Style="{StaticResource BaseFrame}">
                                            <ff:CachedImage Grid.Row="0" Source="{Binding pic}" Aspect="AspectFit"/>
                                        </Frame>
                                        <Frame Grid.Row="0" HeightRequest="20" WidthRequest="20" CornerRadius="10" Padding="0"
                                               BorderColor="Red" HorizontalOptions="End" VerticalOptions="Start">
                                            <Label Text="拼" TextColor="Red" HorizontalOptions="Center" VerticalOptions="Center"/>
                                        </Frame>
                                        <Label Grid.Row="1" Text="{Binding name}" FontSize="Large" LineBreakMode="TailTruncation"/>
                                        <Label Grid.Row="2">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="￥" TextColor="Red"/>
                                                    <Span Text="{Binding price}" TextColor="Red" FontSize="Large"/>
                                                    <Span Text="￥9999" TextDecorations="Strikethrough"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </Grid>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                    </ScrollView>

                    <!--新品上市列表-->
                    <Label Text="新品上市" Style="{DynamicResource SectionTitle}"/>
                    <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                        <StackLayout Orientation="Horizontal" BindableLayout.ItemsSource="{Binding NewProductList}" Spacing="0">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout HeightRequest="180" WidthRequest="120" Margin="5">
                                        <Frame Style="{StaticResource BaseFrame}">
                                            <ff:CachedImage Source="{Binding pic}" Aspect="AspectFit"/>
                                        </Frame>
                                        <Label Text="{Binding name}" FontSize="Large" LineBreakMode="TailTruncation"/>
                                        <Label TextColor="Red">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="￥"/>
                                                    <Span Text="{Binding price}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </StackLayout>
                                    
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                    </ScrollView>

                    <!--热卖商品列表-->
                    <Label Text="热卖好货" Style="{DynamicResource SectionTitle}"/>
                    <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                        <StackLayout Orientation="Horizontal" BindableLayout.ItemsSource="{Binding HotProductList}" Spacing="0">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout HeightRequest="180" WidthRequest="120" Margin="5">
                                        <Frame HeightRequest="120" CornerRadius="5" Style="{StaticResource BaseFrame}">
                                            <ff:CachedImage Source="{Binding pic}" Aspect="AspectFit"/>
                                        </Frame>
                                        <Label Text="{Binding name}" FontSize="Large" LineBreakMode="TailTruncation"/>
                                        <Label TextColor="Red">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="￥"/>
                                                    <Span Text="{Binding price}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </StackLayout>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                    </ScrollView>

                    <!--正品大牌列表-->
                    <Label Text="正品大牌" Style="{DynamicResource SectionTitle}"/>
                    <FlexLayout HeightRequest="220" Wrap="Wrap" JustifyContent="Center" AlignContent="Start" BindableLayout.ItemsSource="{Binding BrandList}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Frame HeightRequest="100" CornerRadius="5" Margin="5" Style="{StaticResource BaseFrame}">
                                    <ff:CachedImage Source="{Binding logo}" Aspect="AspectFill"/>
                                </Frame>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </FlexLayout>

                    <!--专题列表-->
                    <Label Text="精彩专题" Style="{DynamicResource SectionTitle}"/>
                    <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                        <StackLayout Orientation="Horizontal" BindableLayout.ItemsSource="{Binding SubjectList}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout WidthRequest="250" Orientation="Vertical" Margin="5">
                                        <Frame CornerRadius="5" Style="{StaticResource BaseFrame}">
                                            <ff:CachedImage Source="{Binding pic}" Aspect="AspectFill"/>
                                        </Frame>
                                        <Label Text="{Binding title}" FontSize="Large"/>
                                    </StackLayout>
                                    
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                    </ScrollView>

                </StackLayout>
            </ScrollView>
            
            <!--头部-->
            <Frame Style="{StaticResource BaseFrame}" HeightRequest="40" CornerRadius="20" Margin="5,35" VerticalOptions="StartAndExpand" HorizontalOptions="Fill">
                <StackLayout Orientation="Horizontal">
                    <ImageButton x:Name="CustomerServiceButton" Source="Resource/drawable/service.png" Style="{StaticResource EarImageButton}"/>
                    <controls:MyEntry x:Name="account" Placeholder="原料更便宜啦~质量更好、价格低" Text="{Binding Account}" Style="{StaticResource SearchEntry}"/>
                    <ImageButton x:Name="MessageButton" Source="Resource/drawable/message.png" Style="{StaticResource EarImageButton}" Clicked="MessageButton_Clicked"/>
                </StackLayout>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>