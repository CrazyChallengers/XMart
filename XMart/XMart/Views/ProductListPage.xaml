                </ScrollView.Behaviors>-->
            </ScrollView>

            <ActivityIndicator Grid.Row="3" IsRunning="{Binding IndicatorIsRunning}" HorizontalOptions="Center" VerticalOptions="End"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>